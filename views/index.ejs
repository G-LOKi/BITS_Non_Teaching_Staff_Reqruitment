  <div align="center">
    <h1 align="center">Non Teaching Staff Recruitment</h1>
    <h2><small>Fill the following details :</small></h2>
    <h4><small>Fields marked with * are mandatory. Use Chrome for best results.</small></h4>
  <div class="container">
    <form id="recruitment-form" action="/applied" enctype="multipart/form-data" method="post" data-toggle="validator" role="form">

      <div class="col-md-4">
      <div class="form-group">
      <label for="name" class="control-label">Name*</label>
      <input class="form-control" type="text" name="name" id="name" required/>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
      <label for="location" class="control-label">Location*</label>
      <input class="form-control" type="text" name="location" id="location" required/>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group has-feedback">
      <label for="phoneno" class="control-label">Phone Number*</label>
      <div class="input-group">
      <span class="input-group-addon">+91</span>
      <input class="form-control" type="text" name="phoneno" id="phoneno"
            pattern="^[0-9]{10}$" data-pattern-error="10 digit number required" required/>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      </div>
      <div class="help-block with-errors"></div>
      </div>
      </div>

      <div class="col-md-4">
      <div class="col-md-4">
        <div class="form-group has-feedback">
        <label for="stdno" class="control-label">STD Code</label>
        <input class="form-control" type="text" name="stdno" id="stdno"
              pattern="^[0-9]*$" data-pattern-error="Valid number required"/>
        <div class="help-block with-errors"></div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="form-group has-feedback">
        <label for="landline" class="control-label">Landline</label>
        <input class="form-control" type="text" name="landline" id="landline"
                pattern="^[0-9]*$" data-pattern-error="Valid number required"/>
        <div class="help-block with-errors"></div>
        </div>
      </div>
      </div>

      <br><br>

      <div class="col-md-4">
      <div class="form-group has-feedback">
      <label for="email" class="control-label">Email*</label>
      <div class="input-group">
      <span class="input-group-addon">@</span>
      <input class="form-control" type="email" name="email" id="email"
             data-error="Invalid email address" required>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      </div>
      <div class="help-block with-errors"></div>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
        <label for="date" class="control-label">Date of Birth*</label>
      <input class="form-control" id="date" name="date" type="date" min="1930-01-01" required="required"/>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
        <label for="qualification" class="control-label">Qualification*</label>
      <input class="form-control" type="text" name="qualification" id="qualification" required/>
      </div>
      </div>

      <br><br>

      <div class="col-md-4">
        <div class="col-md-6">
          <div class="form-group has-feedback">
            <label for="experience-years" class="control-label">Experience in years*</label>
          <div class="input-group">
          <input class="form-control" type="number" name="experience-year" id="experience-year"
                 pattern="^[0-9]*$" data-pattern-error="Valid number required" required/>
          <span class="input-group-addon">Y</span>
          </div>
          <div class="help-block with-errors"></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group has-feedback">
            <label for="experience-months" class="control-label">and months*</label>
          <div class="input-group">
          <input class="form-control" type="number" name="experience-month" id="experience-month"
                 pattern="^[0-9]*$" max=12 min=0 data-pattern-error="Valid number required from 0 to 12" required/>
          <span class="input-group-addon">M</span>
          </div>
          <div class="help-block with-errors"></div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
        <label for="currentemployer" class="control-label">Current Employer</label>
      <input class="form-control" type="text" name="currentemployer" id="currentemployer"/>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
        <label for="designation" class="control-label">Designation</label>
      <input class="form-control" type="text" name="designation" id="designation"/>
      </div>
      </div>

      <br><br>

      <div class="col-md-4">
      <div class="form-group has-feedback">
      <label for="lsw" class="control-label">Last Salaray Withdrawn per month</label>
      <div class="input-group">
      <span class="input-group-addon">Rs.</span>
      <input class="form-control" type="text" name="lsw" id="lsw"
             pattern="^[0-9]*$" data-pattern-error="Valid number required"/>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      </div>
      <div class="help-block with-errors"></div>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group has-feedback">
      <label for="expectedsalary" class="control-label">Expected Monthly Salary*</label>
      <div class="input-group">
      <span class="input-group-addon">Rs.</span>
      <input class="form-control" type="text" name="expectedsalary" id="expectedsalary"
             pattern="^[0-9]{5,6}$" data-pattern-error="5 to 6 digit number required" required/>
      <span class="glyphicon form-control-feedback" aria-hidden="true"></span>
      </div>
      <div class="help-block with-errors"></div>
      </div>
      </div>

      <div class="col-md-4">
      <div class="form-group">
        <label for="remarks" class="control-label">Remarks</label>
      <textarea class="form-control" type="text" maxlength="200" name="remarks" id="remarks" placeholder="Any other remarks? Character limit - 200"></textarea>
      </div>
      </div>

      <div class="col-md-4">
      <label for="file" class="control-label">Upload File (application form)*</label>
      <input type="file" name="file" id="file" required></input>
      <input type='button' id='btnLoad' value='Load file' onclick='getSize();'></input>
      </div>

      <br>

      <div class="col-md-12">
      <br><br>
      <input class="btn btn-success" type="submit" id="apply" value="Submit"/>
      </div>

    </form>
  </div>
  <br>
  <div class="alert alert-info" role="alert"><strong>Attention!</strong> Please fill all fields correctly, cannot edit after submitting!</div>
